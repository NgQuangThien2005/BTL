<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.controllers.KhachHangController">

    <!-- Cấu hình padding và spacing -->
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <spacing>10</spacing>

    <!-- Style cho VBox -->
    <style>
        -fx-background-color: #f4f4f4;
    </style>

    <!-- Tiêu đề -->
    <Label text="QUẢN LÝ KHÁCH HÀNG" style="-fx-font-weight: bold; -fx-font-size: 18px;"/>

    <!-- Nội dung chính -->
    <HBox spacing="10">
        <!-- Cột bên trái - Form nhập liệu -->
        <VBox spacing="5" prefWidth="300">
            <Label text="Mã khách hàng:" />
            <TextField fx:id="maKhachHangField" />

            <Label text="Tên khách hàng:" />
            <TextField fx:id="tenKhachHangField" />

            <Label text="Giới tính:" />
            <ComboBox fx:id="gioiTinhComboBox" />

            <Label text="Số điện thoại:" />
            <TextField fx:id="sdtField" />
        </VBox>

        <!-- Cột bên phải - Địa chỉ và nút bấm -->
        <VBox spacing="5">
            <Label text="Địa chỉ:" />
            <TextArea fx:id="diaChiArea" prefWidth="300" prefHeight="150" />

            <!-- Nhóm nút chức năng -->
            <HBox spacing="10" alignment="CENTER">
                <padding>
                    <Insets top="10" right="20" bottom="10" left="10"/>
                </padding>

                <Button fx:id="themButton" text="Thêm" onAction="#handleThemKhachHang"
                        style="-fx-background-color: #4CAF50; -fx-text-fill: white;"
                        prefWidth="80" />
                <Button fx:id="suaButton" text="Sửa" onAction="#handleSuaKhachHang"
                        style="-fx-background-color: #2196F3; -fx-text-fill: white;"
                        prefWidth="80" disable="true" />
                <Button fx:id="xoaButton" text="Xóa" onAction="#handleXoaKhachHang"
                        style="-fx-background-color: #f44336; -fx-text-fill: white;"
                        prefWidth="80" disable="true" />
                <Button fx:id="lamMoiButton" text="Làm mới" onAction="#handleLamMoi"
                        style="-fx-background-color: #607D8B; -fx-text-fill: white;"
                        prefWidth="80" />
            </HBox>
        </VBox>
    </HBox>

    <!-- Bảng hiển thị danh sách -->
    <TableView fx:id="khachHangTable" prefHeight="300">
        <columns>
            <TableColumn fx:id="maKhachHangColumn" text="Mã KH" prefWidth="80" />
            <TableColumn fx:id="tenKhachHangColumn" text="Tên khách hàng" prefWidth="150" />
            <TableColumn fx:id="sdtColumn" text="SĐT" prefWidth="100" />
            <TableColumn fx:id="gioiTinhColumn" text="Giới tính" prefWidth="80" />
            <TableColumn fx:id="diaChiColumn" text="Địa chỉ" prefWidth="200" />
        </columns>
    </TableView>
</VBox>